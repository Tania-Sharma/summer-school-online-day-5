{
    "manifest_version": 3,
    "name": "Weather Checker",
    "version": "1.0",
    "description": "Check weather for any city using OpenWeatherMap API",
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon.png",
            "48": "icons/icon.png",
            "128": "icons/icon.png"
        }
    },
    "icons": {
        "16": "icons/icon.png",
        "48": "icons/icon.png",
        "128": "icons/icon.png"
    },
    "permissions": [
        "geolocation"
    ],
    "host_permissions": [
        "https://api.openweathermap.org/"
    ]
}